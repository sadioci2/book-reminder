    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :lender %><br>
    <%= f.select :lender, Book::LIBRARIES, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :lender_other %><br>
    <%= f.text_field :lender_other %>
  </div>
  <div class="field">
    <%= f.label :date_due %><br>
    <%= f.date_select :date_due, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :renew %><br>
    <%= f.check_box :renew %>
  </div>
  <div class="field">
    <%= f.label :reminder %><br>
    <%= f.date_select :reminder, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
